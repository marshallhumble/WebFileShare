{{define "title"}}User: {{.User.Name}}{{end}}

{{define "main"}}
    <form enctype="multipart/form-data" action='/user/edit/{{.User.ID}}' method='POST' novalidate>
    <!-- Include the CSRF token -->
    <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
    {{with .User}}
        <div class='sharedfile'>
            <div class='metadata'>
                <span>{{.Name}}</span>
            </div>
            <br>
            <div class='metadata'>
                <div>
                    <label for="name"> Name:
                        <input type='text' name='name' value='{{.Name}}'>
                    </label>
                </div>
                <div>
                    <label for="email"> Email:
                        <input type='email' name='email' value='{{.Email}}'>
                    </label>
                </div>
                <div>
                    <label for="name"> Password:
                        <input type='password' name='password' value=''>
                    </label>
                </div>
                <time>Created: <td>{{humanDate .Created}}</time> <br>
                {{if .Admin}}
                <div>
                    <label for="admin"> Admin:
                        <select id="admin" name="admin">
                            <option value="True" selected>True</option>
                            <option value="False">False</option>
                        </select>
                    </label>
                </div>
                {{else}}
                    <div>
                        <label for="admin"> Admin:
                            <select id="admin" name="admin">
                                <option value="True">True</option>
                                <option value="False" selected>False</option>
                            </select>
                        </label>
                    </div>
                {{end}}
                {{if .User}}
                    <div>
                        <label for="user"> User:
                            <select id="user" name="user">
                                <option value="True" selected>True</option>
                                <option value="False">False</option>
                            </select>
                        </label>
                    </div>
                {{else}}
                    <div>
                        <label for="guest"> User:
                            <select id="user" name="user">
                                <option value="True">True</option>
                                <option value="False" selected>False</option>
                            </select>
                        </label>
                    </div>
                {{end}}
                {{if .Guest}}
                    <div>
                        <label for="guest"> Guest:
                            <select id="guest" name="guest">
                                <option value="True" selected>True</option>
                                <option value="False">False</option>
                            </select>
                        </label>
                    </div>
                {{else}}
                    <div>
                        <label for="guest"> Guest:
                            <select id="guest" name="guest">
                                <option value="True">True</option>
                                <option value="False" selected>False</option>
                            </select>
                        </label>
                    </div>
                {{end}}
                {{if .Disabled}}
                    <div>
                        <label for="disabled"> Disabled:
                            <select id="disabled" name="disabled">
                                <option value="True" selected>True</option>
                                <option value="False">False</option>
                            </select>
                        </label>
                    </div>
                {{else}}
                    <div>
                        <label for="disabled"> Disabled:
                            <select id="guest" name="disabled">
                                <option value="True">True</option>
                                <option value="False" selected>False</option>
                            </select>
                        </label>
                    </div>
                {{end}}
            </div>
        </div>
    {{end}}
        <div>
        <input type="submit" name="update" value="Update Profile">
        </div>
        {{if not .User.Admin }}
            <div><input type='submit' value='Delete' formaction='/user/delete/{{.User.ID}}'></div>
        {{end}}
    </form>
{{end}}